@require './nprogress'
@require './code'
@require './custom-blocks'
@require './arrow'
@require './wrapper'
@require './toc'

.page
  padding-left $sidebarWidth

.sidebar
  font-size 15px
  overflow-y auto
  font-size: 15px;
  background-color: #fff;
  width: 20rem;
  position: fixed;
  z-index: 10;
  margin: 0;
  top: 3.6rem;
  left: 0;
  bottom: 0;
  box-sizing: border-box;
  border-right: 1px solid #eaecef;
  overflow-y: auto;

.sidebar-mask
  width 100vw;
  height 100vh;
  background rgba(0, 0, 0, 0.7);
  z-index 10;
  position fixed;
  top 0;
  display none

.nav-open .sidebar-mask
  display block;

.page.custom-page .theme-default-content
    margin: 100px 40px 20px;
    max-width: 100%;

@media (min-width: ($MQMobile + 1px))
  .theme-container.no-sidebar
    .sidebar
      display none
    .page
      padding-left 0

@require 'mobile.styl'
